<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Sinonimos"

        >

    <TextView
            android:text="Puntaje:"
            android:layout_width="98dp"
            android:layout_height="47dp"
            android:id="@+id/tvPuntaje2" android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:fontFamily="casual" android:textAlignment="center"
            android:layout_marginTop="16dp"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/tvPuntaje" app:layout_constraintHorizontal_bias="1.0"
            tools:text="Puntaje: "/>
    <Button
            android:text="Button"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:id="@+id/btnRespuesta2"
            app:layout_constraintTop_toBottomOf="@+id/btnRespuesta1"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="2dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="2dp"
            android:layout_marginTop="16dp" app:layout_constraintHorizontal_bias="1.0"
            android:background="@color/design_default_color_primary"
            android:textColor="@android:color/background_light" android:fontFamily="casual"/>
    <Button
            android:text="Button"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:id="@+id/btnRespuesta3"
            app:layout_constraintTop_toBottomOf="@+id/btnRespuesta2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp" android:layout_marginTop="20dp" app:layout_constraintHorizontal_bias="1.0"
            android:background="@color/colorAccent" android:textColor="@android:color/background_light"
            android:fontFamily="casual"
    />
    <TextView
            android:text="TextView"
            android:layout_width="34dp"
            android:layout_height="47dp"
            android:id="@+id/tvPuntaje" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="148dp"
            app:layout_constraintTop_toTopOf="parent"
            android:fontFamily="casual" android:textAlignment="center"
            android:layout_marginTop="16dp"
    />
    <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tvPregunta"
            app:layout_constraintTop_toBottomOf="@+id/tvPuntaje"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="60dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="60dp"
            app:layout_constraintHorizontal_bias="0.0" android:textSize="24sp" android:fontFamily="casual"
            android:textAlignment="center" android:layout_marginTop="68dp"/>
    <Button
            android:text="Button"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:id="@+id/btnRespuesta1" android:layout_marginTop="80dp"
            app:layout_constraintTop_toBottomOf="@+id/tvPregunta" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="2dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="2dp"
            app:layout_constraintHorizontal_bias="1.0" android:background="@color/colorAccent"
            android:textColor="@android:color/background_light" android:fontFamily="casual"/>

    <com.airbnb.lottie.LottieAnimationView
            android:layout_width="176dp"
            android:layout_height="130dp"
            android:id="@+id/successito"
            app:layout_constraintTop_toBottomOf="@+id/btnRespuesta3"
            app:lottie_imageAssetsFolder="assets"
            app:lottie_fileName="check_animation.json"
            app:lottie_loop="false"
            app:lottie_autoPlay="false"
            android:layout_marginTop="44dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" tools:ignore="MissingConstraints"
            app:layout_constraintVertical_bias="1.0" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:visibility="visible"/>
</android.support.constraint.ConstraintLayout>