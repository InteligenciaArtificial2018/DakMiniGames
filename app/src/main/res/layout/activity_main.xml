<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txtPortada"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="50dp" app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/txtPortada" android:layout_marginBottom="70dp"
            app:layout_constraintBottom_toTopOf="@+id/btnIniciar" android:fontFamily="casual" android:textSize="30sp"
            app:layout_constraintVertical_chainStyle="spread_inside" android:textAlignment="center"
            app:layout_constraintHorizontal_bias="0.502"/>
    <Button
            android:text="@string/txtIniciar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnIniciar"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.514" android:layout_marginTop="50dp"
            app:layout_constraintTop_toBottomOf="@+id/txtPortada" android:background="@color/colorAccent"
            android:textColor="@android:color/background_light" android:fontFamily="casual"/>
    <Button
            android:text="@string/txtAcercaDe"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnAcercaDe"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/btnIniciar"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="24dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.024"
            android:background="@color/colorAccent"
            android:textColor="@android:color/background_light"
            android:fontFamily="casual" tools:layout_marginRight="@dimen/cinco"/>
    <Button
            android:text="@string/txtCompartir"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnCompartir" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="24dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/btnIniciar"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.024"
            android:background="@color/colorAccent" android:textColor="@android:color/background_light"
            android:fontFamily="casual" app:layout_constraintStart_toEndOf="@+id/btnAcercaDe"
            android:layout_marginStart="8dp"/>

    <com.airbnb.lottie.LottieAnimationView
            android:layout_width="236dp"
            android:layout_height="241dp"
            android:layout_marginTop="40dp"
            app:lottie_imageAssetsFolder="assets"
            app:lottie_fileName="dino_dance.json"
            app:lottie_loop="true"
            app:lottie_autoPlay="true"
            app:layout_constraintTop_toBottomOf="@+id/btnAcercaDe" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintVertical_bias="0.975"/>

</android.support.constraint.ConstraintLayout>