<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Gramatica">

    <Button
            android:text="Button"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:id="@+id/btnRespuesta2"
            app:layout_constraintTop_toBottomOf="@+id/btnRespuesta1"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="2dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="2dp"
            android:layout_marginTop="4dp" app:layout_constraintHorizontal_bias="0.0"
            android:background="@color/colorAccent2"/>
    <Button
            android:text="Button"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:id="@+id/btnRespuesta3"
            app:layout_constraintTop_toBottomOf="@+id/btnRespuesta2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp" android:layout_marginTop="4dp" app:layout_constraintHorizontal_bias="0.0"
            android:background="@color/colorAccent"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvPuntaje" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="160dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="160dp" android:fontFamily="casual" android:textAlignment="center"/>
    <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tvPregunta"
            app:layout_constraintTop_toBottomOf="@+id/tvPuntaje"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="60dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="60dp"
            app:layout_constraintHorizontal_bias="0.964" android:textSize="24sp" android:fontFamily="casual"
            android:textAlignment="center"/>
    <Button
            android:text="Button"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:id="@+id/btnRespuesta1" android:layout_marginTop="128dp"
            app:layout_constraintTop_toBottomOf="@+id/tvPregunta" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="2dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="2dp"
            app:layout_constraintHorizontal_bias="0.0" android:background="@color/colorAccent"/>
</android.support.constraint.ConstraintLayout>