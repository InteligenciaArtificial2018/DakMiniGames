<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Puntaje" android:orientation="vertical" android:screenOrientation="portrait">

    <TextView
            android:text="Su puntaje fue: "
            android:layout_width="164dp"
            android:layout_height="56dp"
            android:id="@+id/tvPuntos2" android:layout_marginTop="52dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/tvPuntos" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="1.0" android:textSize="24sp"/>
    <Button
            android:text="REGRESAR"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:id="@+id/btnRegresar"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:background="@color/colorAccent"
            android:textColor="@android:color/background_light" android:fontFamily="casual"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/tvRecord"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/btnSalir" app:layout_constraintVertical_bias="0.976"/>
    <Button
            android:text="SALIR"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:id="@+id/btnSalir"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:background="@color/colorAccent"
            android:textColor="@android:color/background_light" android:fontFamily="casual"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginBottom="28dp"
            app:layout_constraintBottom_toTopOf="@+id/successito"/>
    <TextView
            android:text="."
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:id="@+id/tvPuntos" android:layout_marginTop="52dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="72dp" android:textSize="24sp"/>
    <TextView
            android:text="."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvRecord" android:layout_marginStart="28dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="48dp"
            app:layout_constraintTop_toBottomOf="@+id/tvPuntos" android:textSize="20sp"/>
    <com.airbnb.lottie.LottieAnimationView
            android:layout_width="191dp"
            android:layout_height="147dp"
            android:id="@+id/successito"
            app:layout_constraintTop_toBottomOf="@+id/btnRespuesta3"
            app:lottie_imageAssetsFolder="assets"
            app:lottie_fileName="dino_dance.json"
            app:lottie_loop="false"
            app:lottie_autoPlay="false"
            android:layout_marginTop="44dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" tools:ignore="MissingConstraints"
            app:layout_constraintVertical_bias="1.0" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:visibility="visible"/>
</android.support.constraint.ConstraintLayout>