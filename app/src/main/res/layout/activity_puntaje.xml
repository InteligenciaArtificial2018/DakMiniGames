<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Puntaje">

    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvPuntos" android:layout_marginTop="60dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="160dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvRecord" android:layout_marginStart="28dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/tvPuntos"/>
    <Button
            android:text="Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnCambiarModo" android:layout_marginTop="100dp"
            app:layout_constraintTop_toBottomOf="@+id/tvRecord" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="148dp"/>
    <Button
            android:text="Button"
            android:layout_width="wrap_content"
            android:layout_height="49dp"
            android:id="@+id/btnIniciar" android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@+id/btnCambiarModo" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="148dp"/>
</android.support.constraint.ConstraintLayout>